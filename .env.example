AQPY_DB_HOST=localhost
AQPY_DB_PORT=5432
AQPY_DB_NAME_PMS=pms
AQPY_DB_NAME_BME=bme

AQPY_SERIAL_PORT=/dev/serial0
AQPY_SERIAL_BAUD=9600
AQPY_PMS_STARTUP_DELAY=20
AQPY_PMS_AVG_TIME=10
